<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TrialClinic.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TrialClinic.Pages"
    Shell.FlyoutBehavior="Disabled">


    <ShellContent Route="startpage" ContentTemplate="{DataTemplate local:StartPage}" />
    <ShellContent Route="userpage" ContentTemplate="{DataTemplate local:UserPage}" />
    <ShellContent Route="trialdetailspage" ContentTemplate="{DataTemplate local:TrialDetailsPage}" />
    <ShellContent Route="signinpage" ContentTemplate="{DataTemplate local:SignInPage}" />
    <ShellContent Route="recruiterpage" ContentTemplate="{DataTemplate local:RecruiterPage}" />
    <ShellContent Route="createtrialpage" ContentTemplate="{DataTemplate local:CreateTrialPage}" />
    <ShellContent Route="trialslistpage" ContentTemplate="{DataTemplate local:TrialsListPage}" />

</Shell>