<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrialClinic.Pages.Disclaimer"
             BackgroundImageSource="bluebackground.png" BackgroundColor="#80000000">
           <Grid>
           
        <Frame 
         CornerRadius="30"
         HeightRequest="500"
         WidthRequest="350"
         VerticalOptions="Center"
         HorizontalOptions="FillAndExpand"
         Margin="0,-200,0,0"/>

        <Label Text="DISCLAIMER"
    
         FontSize="30"
         FontAttributes="Bold"
         HorizontalOptions="CenterAndExpand"
         VerticalOptions="StartAndExpand"
         Margin="0,20,0,0"
         TextColor="Red"/>

        <ImageButton Source="sign_in.png" 
              HorizontalOptions="Center"
              VerticalOptions="EndAndExpand"
              WidthRequest="270"
              IsEnabled="True"
              Clicked="ImageButton_SignInClicked"  
              Aspect="AspectFill" Margin="0,0,8,120">
        </ImageButton>
    
        <ImageButton Source="sign_up.png" 
              HorizontalOptions="Center"
              VerticalOptions="EndAndExpand"
              WidthRequest="270"
              IsEnabled="True"
              Clicked="ImageButton_SignUpClicked"  
              Aspect="AspectFill" Margin="0,0,8,50">

            </ImageButton>
            
        </Grid>
</ContentPage>