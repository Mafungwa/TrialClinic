<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrialClinic.Pages.StartPage"
             xmlns:pages="clr-namespace:TrialClinic.Pages"
             BackgroundImageSource="bluebackground.png"
             Title="">
    <Grid>

        <Image Source="clinical_bridge_logo.jpg" 
            VerticalOptions="Start"
            HorizontalOptions="End"
            WidthRequest="50"
            HeightRequest="50"
            Margin="20">
            
        </Image>


        <Label Text="FIND CLINICAL TRIALS FOR YOUR CONDITION" 
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="White"
               Margin="38,-500,0,0">
        </Label>
        <ImageButton Source="get_started.png" 
                     HorizontalOptions="CenterAndExpand"
                     VerticalOptions="EndAndExpand"
                     WidthRequest="270"
                     IsEnabled="True"
                     Clicked="ImageButton_OnClicked"  
                     Aspect="AspectFill" Margin="0,85">
        </ImageButton>
    </Grid>
</ContentPage> 
